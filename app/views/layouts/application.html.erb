  .navbar-xs .navbar-primary .navbar .navbar-brand{ padding: 0px 0px;font-size: 16px;line-height: 32px; }
  .navbar-xs .navbar-primary .navbar .navbar-nav > li > a {  padding-top: 0px; padding-bottom: 0px; line-height: 32px;  }
  .navbar-sm .navbar-primary .navbar { min-height:32px; height: 32px; }
  .navbar-sm .navbar-primary .navbar .navbar-brand{ padding: 0px 12px;font-size: 16px;line-height: 32px; }
  .navbar-sm .navbar-primary .navbar .navbar-nav > li > a {  padding-top: 0px; padding-bottom: 0px; line-height: 32px; }
  .tnav .navbar .container { height: 32px; }

</style>





